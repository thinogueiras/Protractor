{
    "chrome": {
        "browserName": "chrome",
        "chromeOptions": {
            "args": [
                "--start-maximized"
            ],
            "prefs": {
                "profile.managed_default_content_settings.notifications": 1,
                "profile.managed_default_content_settings.popups": 1
            }
        }
    },
    "firefox": {
        "browserName": "firefox",
        "moz:firefoxOptions": {
            "args": [
                "--safe-mode",
                "--start-maximized"
            ]
        }
    },
    "headlessChrome": {
        "browserName": "chrome",
        "chromeOptions": {
            "args": [
                "--headless",
                "--start-maximized"
            ]
        }
    },
    "headlessFirefox": {
        "browserName": "firefox",
        "moz:firefoxOptions": {
            "args": [
                "--headless",
                "--safe-mode",
                "--start-maximized"
            ]
        }
    }
}